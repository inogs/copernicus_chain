#!/bin/ksh
# This command creates grads scripts from templates

# Load common profile
. @@(I:OPA_HOME)/bin/opa_profile.inc

echo "### Setting up grads scripts"
opa_prex "cd $OPA_ETCDIR/grads"
for file_tpl in *.gs.template ; do
  file="${file_tpl%%.template}"
  opa_log 2 "Setting up template '${file_tpl}' -> '${file}'"
  opa_setup_template "$file_tpl" "$file" || {
    opa_log 0 "ERR: Template substitution failed!"
    exit 1
  }
done
